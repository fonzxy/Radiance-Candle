        }

        .registration-form form {
            display: inline-block;
        }

        .registration-form input[type="submit"] {
            background-color: #665e51;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 30px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .registration-form input[type="submit"]:hover {
            background-color: #544c42;
        }

