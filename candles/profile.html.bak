    /* brand image */
    .brandpic {
       text-align: center;
    }
    
    /* hr */
    hr {
    border: 0;
    height: 1px;
    background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0));
    opacity: 0.2;
    }

    /* nav bar */
        .top-nav {
        text-align: center;
        padding: 0;
    }
    
    .top-nav ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }
    
    .top-nav ul li {
        display: inline-block;
    }
    
    .top-nav ul li a {
        display: block;
        padding: 20px 30px;
        color: #665e51;
        text-decoration: none;
        font-size: 16px;
        font-family: Georgia;
        border-radius: 70px ;
    }
    
    .top-nav ul li a:hover {
        background-color: #b7b7a4;
    }
    
    
    /* profile and cart */
    .profile .cart {
      float: right;
      width: 33.3%;
      padding: 30px;
      
    }
	
	    .cart {
       padding-right: 90px;
    }

    
    .profile .cart::after {
      content: "";
      clear: both;
      display: table;
    }
	
	/* registration  */
.registration-form {
